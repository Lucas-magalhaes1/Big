@page "/Categorias"
@using Big.Models
@using Big.Services
@inject CategoriaService CategoriaService
@inject NavigationManager Navigation

<h3>Cat√°logo de Categorias</h3>

<div class="mb-4">
    <a class="btn btn-success" href="/Categorias/Adicionar">Adicionar Categoria</a>
</div>

@if (categorias == null)
{
    <p><em>Carregando categorias...</em></p>
}
else if (!categorias.Any())
{
    <p>Nenhuma categoria encontrada.</p>
}
else
{
    <div class="row">
        @foreach (var categoria in categorias)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@categoria.ImagemUrl" class="card-img-top" alt="@categoria.Nome" style="max-height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@categoria.Nome</h5>
                        <p class="card-text">@categoria.Descricao</p>
                        <div class="d-flex justify-content-between">
                            <a href="/Categorias/Editar/@categoria.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/Categorias/Excluir/@categoria.Id" class="btn btn-danger btn-sm">Excluir</a>
                            <a href="/Produtos/Categoria/@categoria.Id" class="btn btn-primary btn-sm">Produtos</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Categoria>? categorias;

    protected override async Task OnInitializedAsync()
    {
        categorias = await CategoriaService.ObterTodasAsync();
    }
}
@page "/Clientes/Excluir/{id:int}"
@using Big.Models
@using Big.Services
@inject ClienteService ClienteService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<h3>Excluir Cliente</h3>

@if (cliente == null)
{
    <p>Carregando cliente...</p>
}
else
{
    <div class="alert alert-danger">
        <h5>Tem certeza que deseja excluir o cliente <strong>@cliente.Nome</strong>?</h5>
    </div>

    <button class="btn btn-danger" @onclick="ExcluirClienteAsync">Confirmar Exclus√£o</button>
    <a href="/Clientes" class="btn btn-secondary">Cancelar</a>
}

@code {
    [Parameter] public int id { get; set; }
    private Cliente? cliente;

    protected override async Task OnInitializedAsync()
    {
        cliente = await ClienteService.ObterPorIdAsync(id);
    }

    private async Task ExcluirClienteAsync()
    {
        try
        {
            await ClienteService.ExcluirAsync(id);
            Navigation.NavigateTo("/Clientes");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao excluir o cliente: {ex.Message}");
        }
    }
}